  <!-- 根据metaDataId进行选择性更新-->
  <update id="updateByFileIdSelective" parameterType="com.platon.rosettanet.admin.dao.entity.LocalDataFile">
    update local_data_file
    <set>
      <if test="resourceName != null">
        `resource_name` = #{resourceName,jdbcType=VARCHAR},
      </if>
