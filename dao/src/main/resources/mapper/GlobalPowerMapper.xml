<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.platon.rosettanet.admin.dao.GlobalPowerMapper">
  <resultMap id="BaseResultMap" type="com.platon.rosettanet.admin.dao.entity.GlobalPower">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="identity_id" jdbcType="VARCHAR" property="identityId" />
    <result column="total_core" jdbcType="INTEGER" property="totalCore" />
    <result column="total_Memory" jdbcType="BIGINT" property="totalMemory" />
    <result column="total_Bandwidth" jdbcType="BIGINT" property="totalBandwidth" />
    <result column="used_core" jdbcType="INTEGER" property="usedCore" />
    <result column="used_Memory" jdbcType="BIGINT" property="usedMemory" />
    <result column="used_Bandwidth" jdbcType="BIGINT" property="usedBandwidth" />
    <result column="rec_update_time" jdbcType="TIMESTAMP" property="recUpdateTime" />
  </resultMap>

  <resultMap id="BaseResultMapWithDynamicFields" type="com.platon.rosettanet.admin.dao.entity.GlobalPower" extends="BaseResultMap">
    <result column="identity_name" property="dynamicFields.identityName" jdbcType="VARCHAR"/>
  </resultMap>

  <sql id="Base_Column_List">
    id, identity_id, total_core, total_Memory, total_Bandwidth, used_core, used_Memory, 
    used_Bandwidth, rec_update_time
  </sql>

  <!-- 获取全网算力信息-->
  <select id="listGlobalPower"  resultMap="BaseResultMapWithDynamicFields">
    select
    <include refid="Base_Column_List" />,
    go.name as identity_name
    from global_power gp
    left join global_org go on gp.identity_id = go.identity_id
    <if test="keyword != null">
      where identity_id = #{keyword}
    </if>
    order by identity_id
  </select>

</mapper>