<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.platon.metis.admin.dao.LocalPowerLoadSnapshotMapper">

    <resultMap id="BaseResultMap" type="com.platon.metis.admin.dao.entity.LocalPowerLoadSnapshot">
        <id column="power_node_id" jdbcType="VARCHAR" property="powerNodeId" />
        <id column="snapshot_time" jdbcType="TIMESTAMP" property="snapshotTime" />
        <result column="used_core" jdbcType="INTEGER" property="usedCore" />
        <result column="used_memory" jdbcType="BIGINT" property="usedMemory" />
        <result column="used_bandwidth" jdbcType="BIGINT" property="usedBandwidth" />
    </resultMap>

    <sql id="Base_Column_List">
        snapshot_time, used_core, used_memory, used_bandwidth
    </sql>

    <!-- 查询计算节点详情 -->
    <select id="listLocalPowerLoadSnapshotByPowerNodeId"  resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from local_power_load_snapshot
        where power_node_id = #{powerNodeId, jdbcType=VARCHAR}
        order by snapshot_time desc
        limit 0, #{hours, jdbcType=INTEGER}
    </select>
</mapper>