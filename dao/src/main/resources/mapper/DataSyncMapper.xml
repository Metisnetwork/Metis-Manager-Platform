<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.platon.datum.admin.dao.DataSyncMapper">
    <resultMap id="BaseResultMap" type="com.platon.datum.admin.dao.entity.DataSync">
        <id column="data_type" jdbcType="VARCHAR" property="dataType"/>
        <result column="latest_synced" jdbcType="TIMESTAMP" property="latestSynced"/>
    </resultMap>

    <sql id="Base_Column_List">
        data_type,
        latest_synced
    </sql>

    <insert id="insert" parameterType="com.platon.datum.admin.dao.entity.DataSync">
        insert into data_sync (data_type, latest_synced)
        values (#{dataType,jdbcType=VARCHAR}, #{latestSynced,jdbcType=TIMESTAMP})
    </insert>

    <select id="findByPK" parameterType="java.lang.String" resultMap="BaseResultMap">
        select *
        from data_sync
        where data_type = #{dataType, jdbcType=VARCHAR}
    </select>


    <update id="update" parameterType="com.platon.datum.admin.dao.entity.DataSync">
        update data_sync
        set latest_synced = #{latestSynced,jdbcType=TIMESTAMP}
        where data_type = #{dataType, jdbcType=VARCHAR}
    </update>
</mapper>